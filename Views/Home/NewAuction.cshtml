@using Auctions.Models
@model Product

<div class="inline">
    <a href="/home">Home</a>
    <a href="/logout">Logout</a>
    <h1>New Auction</h1>
</div>

<br>
<br>

<form asp-action="CreateNew" method="post">
    
    <div class="form-group col-sm-6>
        <label asp-for="ProductName">Product Name</label>
        <input type="text" name= "ProductName" class="form-control" placeholder="Product Name" />
        <span asp-validation-for="ProductName"></span>
    </div>

    <div class="form-group col-sm-6>
        <label asp-for="StartBid">Starting Bid</label>
        <input type="number" name= "StartBid" class="form-control" placeholder="Start Bid" />
        <span asp-validation-for="StartBid"></span>
    </div>

    <div class="form-group col-sm-6>
        <label asp-for="ProductDescription">Descripton</label>
        <textarea class="form-control" placeholder="post something witty here..." rows="5" cols="33" asp-for="ProductDescription"></textarea>       
        <span asp-validation-for="ProductDescription"></span>
    </div>

    <div class="form-group col-sm-6>
        <label asp-for="EndDate">End Date</label>
        <input type="date" name= "EndDate" class="form-control" placeholder="EndDate" />
        <span asp-validation-for="EndDate"></span>
    </div>

    <div class="col-sm-6">
        <input type="submit" class="btn btn-primary" value="Create Auction"/>
    </div>
        
</form>